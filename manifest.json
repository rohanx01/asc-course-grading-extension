{
  "manifest_version": 3,
  "name": "ASC Grade Helper",
  "version": "1.0",
  "description": "Fetches grading statistics from the ASC portal.",
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "permissions": [
    "scripting",
    "tabs",
    "storage"
  ],
  "host_permissions": [
    "https://asc.iitb.ac.in/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://asc.iitb.ac.in/*"
      ],
      "js": [
        "content.js"
      ],
      "all_frames": true
    }
  ]
}