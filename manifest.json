{
  "manifest_version": 3,
  "name": "ASC Grade Helper",
  "version": "1.0",
  "description": "Fetches and displays grading stats for courses.",
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "permissions": [
    "storage",
    "scripting"
  ],
  "host_permissions": [
    "https://asc.iitb.ac.in/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://asc.iitb.ac.in/*"
      ],
      "js": [
        "content.js"
      ],
      "all_frames": true
    }
  ]
}